<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Day5Assignment.WelcomePage"
             BackgroundColor="#127ac7">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" >
            <Label Text="Welcome to Xamarin" HorizontalOptions="Center" FontSize="30" FontAttributes="Bold" TextColor="White" Padding="20"/>
            <Label Text="Cross-platform apps made easy" HorizontalOptions="Center" FontSize="18" TextColor="White" Padding="20"/>
            <Button BackgroundColor="#1dabf0" HorizontalOptions="Fill"  Text="Login" TextColor="White" Padding="10" Clicked="Button_Clicked"></Button>
            <Button BackgroundColor="#1dabf0" HorizontalOptions="Fill" Text="Register" TextColor="White" Padding="10" Clicked="Button_Clicked_1"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>